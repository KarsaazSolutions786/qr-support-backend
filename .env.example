# Server Configuration
PORT=3000
NODE_ENV=production

# Laravel Backend Configuration
# LARAVEL_BACKEND_URL=https://app.karsaazqr.com
LARAVEL_BACKEND_URL=192.168.100.9:8000
LARAVEL_API_TIMEOUT=30000
LARAVEL_MAX_RETRIES=2

# Redis Configuration (optional - for caching)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300

# Image Processing
DEFAULT_PNG_SIZE=512
DEFAULT_PNG_QUALITY=90
MAX_PNG_SIZE=2048
MIN_PNG_SIZE=64

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS - Comma-separated list of allowed origins (set * for development only)
ALLOWED_ORIGINS=https://app.karsaazqr.com,https://karsaazqr.com,192.168.100.9:8000

# Logging
LOG_LEVEL=info
